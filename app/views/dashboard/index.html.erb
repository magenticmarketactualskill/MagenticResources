<div class="mb-8">
  <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
  <p class="mt-1 text-sm text-gray-500">Overview of your talent pool and project assignments</p>
</div>

<!-- Stats -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
  <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
    <dt class="truncate text-sm font-medium text-gray-500">Total Resources</dt>
    <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @resources_count %></dd>
    <div class="mt-2 flex text-sm">
      <span class="text-indigo-600"><%= @humans_count %> humans</span>
      <span class="mx-2 text-gray-300">|</span>
      <span class="text-purple-600"><%= @ai_agents_count %> AI agents</span>
    </div>
  </div>

  <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
    <dt class="truncate text-sm font-medium text-gray-500">Available Resources</dt>
    <dd class="mt-1 text-3xl font-semibold tracking-tight text-green-600"><%= @available_count %></dd>
    <div class="mt-2 text-sm text-gray-500">Ready to be assigned</div>
  </div>

  <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
    <dt class="truncate text-sm font-medium text-gray-500">Teams</dt>
    <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @teams_count %></dd>
  </div>

  <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
    <dt class="truncate text-sm font-medium text-gray-500">Active Projects</dt>
    <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @active_projects_count %></dd>
    <div class="mt-2 text-sm text-gray-500"><%= @projects_count %> total projects</div>
  </div>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
  <!-- Recent Resources -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Recent Resources</h3>
        <%= link_to "View all", resources_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>
    </div>
    <ul role="list" class="divide-y divide-gray-200">
      <% @recent_resources.each do |resource| %>
        <li class="px-4 py-4 sm:px-6">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <% if resource.human? %>
                  <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-indigo-100">
                    <span class="text-sm font-medium text-indigo-600"><%= resource.name[0..1].upcase %></span>
                  </span>
                <% else %>
                  <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-purple-100">
                    <svg class="h-5 w-5 text-purple-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" />
                    </svg>
                  </span>
                <% end %>
              </div>
              <div class="ml-4">
                <%= link_to resource.name, resource, class: "text-sm font-medium text-gray-900 hover:text-indigo-600" %>
                <p class="text-sm text-gray-500"><%= resource.display_type %></p>
              </div>
            </div>
            <div>
              <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= resource.available? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= resource.status.humanize %>
              </span>
            </div>
          </div>
        </li>
      <% end %>
      <% if @recent_resources.empty? %>
        <li class="px-4 py-8 text-center text-gray-500">
          No resources yet. <%= link_to "Add one", new_resource_path, class: "text-indigo-600 hover:text-indigo-500" %>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Active Assignments -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Active Assignments</h3>
        <%= link_to "View projects", projects_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>
    </div>
    <ul role="list" class="divide-y divide-gray-200">
      <% @active_assignments.each do |assignment| %>
        <li class="px-4 py-4 sm:px-6">
          <div class="flex items-center justify-between">
            <div>
              <%= link_to assignment.resource.name, assignment.resource, class: "text-sm font-medium text-gray-900 hover:text-indigo-600" %>
              <p class="text-sm text-gray-500">
                <%= link_to assignment.project.name, assignment.project, class: "hover:text-indigo-600" %>
                <% if assignment.role.present? %>
                  &middot; <%= assignment.role %>
                <% end %>
              </p>
            </div>
            <div class="text-right">
              <span class="text-sm font-medium text-gray-900"><%= assignment.allocation_percentage %>%</span>
              <p class="text-xs text-gray-500">allocation</p>
            </div>
          </div>
        </li>
      <% end %>
      <% if @active_assignments.empty? %>
        <li class="px-4 py-8 text-center text-gray-500">
          No active assignments yet.
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- Skills by Category -->
<% if @skills_by_category.any? %>
<div class="mt-8 bg-white shadow rounded-lg">
  <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
    <h3 class="text-lg font-medium leading-6 text-gray-900">Skills by Category</h3>
  </div>
  <div class="px-4 py-5 sm:p-6">
    <div class="flex flex-wrap gap-2">
      <% @skills_by_category.each do |category, count| %>
        <%= link_to skills_path(category: category), class: "inline-flex items-center rounded-md bg-gray-50 px-3 py-2 text-sm font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10 hover:bg-gray-100" do %>
          <%= category&.humanize || "Other" %>
          <span class="ml-2 inline-flex items-center rounded-full bg-indigo-100 px-2.5 py-0.5 text-xs font-medium text-indigo-800">
            <%= count %>
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
